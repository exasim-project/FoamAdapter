FoamFile
{
    version         2;
    format          ascii;
    class           dictionary;
    object          controlDict;
}

application     scalarAdvection;

executor        Serial;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         2.9999;

deltaT          0.0001;

writeControl    adjustable;

writeInterval   3;

purgeWrite      0;

writeFormat     ascii;

writePrecision  8;

writeCompression off;

timeFormat      general;

timePrecision   8;

runTimeModifiable true;

adjustTimeStep  no;

maxCo           0.1;

maxDeltaT       0.0001;

setFields       1;

profiling
{
    active          true;
    cpuInfo         true;
    memInfo         true;
    sysInfo         true;
}


