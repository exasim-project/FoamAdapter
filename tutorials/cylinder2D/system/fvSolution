FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-8;
        relTol          1e-5;
        maxIter         500;
    }

    pFinal
    {
        $p;
        relTol          0;
    }

    nfP
    {

        solver          Ginkgo;
        type            "solver::Cg";
        preconditioner
        {
            type            "preconditioner::Jacobi"; // "preconditioner::Ic", "preconditioner::Ilu";
            max_block_size  8;
        }
        criteria
        {
            iteration 500;
            relative_residual_norm 1e-300;
            absolute_residual_norm 1e-300;
        }
    }

    U
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-05;
        relTol          0;
    }

    UFinal
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-05;
        relTol          0;
    }

    nfU
    {
        maxIters        5;
        relTol          1e-06;
    }
}

PISO
{
    momentumPredictor   no;
    nCorrectors     4;
    nNonOrthogonalCorrectors 0;
    pRefCell        0;
    pRefValue       0;
}


