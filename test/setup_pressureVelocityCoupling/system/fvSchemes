FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
#include "simulationParameters"

ddtSchemes
{
    default         none;
    ddt(ofU)          Euler;
    ddt(rho,U)      Euler;
    ddt(rho,T)      Euler;
}

gradSchemes
{
    default         none;
    grad(T)         $GRADSCHEME;
    grad(ofp)         $GRADSCHEME;
    grad(nfp)         $GRADSCHEME;
    grad(U)         $GRADSCHEME;
    limited         cellLimited Gauss linear 1;
}

divSchemes
{
    default         none;
    div(ofPhi,ofU)      $DIVSCHEME;
    div(nfPhi,nfU)      $DIVSCHEME;
}

laplacianSchemes
{
    default         none;
    laplacian(ofNu,ofU) $LAPSCHEME;
    laplacian(nfNu,nfU) $LAPSCHEME;
    laplacian(nfrAUf,nfp) $LAPSCHEME;
    laplacian(forAUf,ofp) $LAPSCHEME;
}

interpolationSchemes
{
    default         none;
    flux(ofU)         linear;
    flux(HbyA)         linear;
    // default         linear;
}

snGradSchemes
{
    default         uncorrected;
    // default         corrected;
}

fluxRequired
{
    ofp;
}


